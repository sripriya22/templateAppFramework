# Enable workspaces
workspaces=true

# Set the package manager to npm
engine-strict=true

# Ensure package-lock is generated with exact versions
package-lock=true
save-exact=true

# If using a private registry, uncomment and update:
# @data-model-framework:registry=https://your.registry.url/
# //your.registry.url/:_authToken=${NPM_TOKEN}

# If you want to use npm's built-in version management
save-prefix=
